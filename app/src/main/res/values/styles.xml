<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#F4F4F4</item>
        <item name="android:textColorHint">@color/subtleGray</item>
    </style>

    <style name="KanjiTextViewStyle">
        <item name="android:textColor">@color/foreground_base</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FuriganaTextViewStyle" parent="KanjiTextViewStyle" />

    <style name="ListViewBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="TextViewBaseStyle">
        <item name="android:textColor">@color/foreground_base</item>
        <item name="android:textSize">@dimen/textSize_base</item>
    </style>

    <style name="NavigationButtonStyle">
        <item name="android:layout_width">@dimen/element_margin_large</item>
        <item name="android:layout_height">@dimen/element_margin_large</item>
        <item name="android:padding">@dimen/element_margin_large</item>
        <item name="android:background">@drawable/ic_menu_black_24dp</item>
    </style>

</resources>
