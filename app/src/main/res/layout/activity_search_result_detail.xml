<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.kratochvil.kotobaten.viewmodel.SearchResultDetailViewModel" />

        <import type="android.view.View"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_marginTop_large"
        android:layout_marginBottom="@dimen/activity_margin">

        <TextView
            android:id="@+id/activity_search_result_detail_japanese_reading"
            style="@style/FuriganaTextViewStyle"
            android:text="@{viewModel.searchResult.japaneseReading}"
            android:textSize="@dimen/textSize_base"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_search_result_detail_japanese_word"
            style="@style/KanjiTextViewStyle"
            android:text="@{viewModel.searchResult.japaneseWord}"
            android:textSize="@dimen/textSize_extraExtraLarge"
            app:layout_constraintTop_toBottomOf="@id/activity_search_result_detail_japanese_reading"/>

        <LinearLayout
            android:id="@+id/activity_search_result_history_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_search_result_detail_japanese_word"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/activity_search_result_history_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:cpb_progressbar_color="@color/colorPrimary"
                app:cpb_progressbar_width="2dp"
                app:cpb_background_progressbar_color="@color/subtleGray"
                app:cpb_background_progressbar_width="2dp"
                android:visibility="@{viewModel.isFrequent ? View.GONE : View.VISIBLE}"/>

            <ImageView
                android:id="@+id/activity_search_result_history_isFrequent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_stars_black_24dp"
                android:visibility="@{viewModel.isFrequent ? View.VISIBLE : View.GONE}"/>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_search_result_detail_common_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="common word"
            android:textAllCaps="true"
            android:textSize="@dimen/textSize_small"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/activity_search_result_history_layout"
            app:layout_constraintBottom_toBottomOf="@id/activity_search_result_history_layout"
            app:layout_constraintLeft_toRightOf="@id/activity_search_result_history_layout"
            android:visibility="@{viewModel.searchResult.isCommon ? View.VISIBLE : View.GONE}"/>

        <ListView
            android:id="@+id/activity_search_result_detail_english_meanings"
            style="@style/ListViewBaseStyle"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/activity_search_result_detail_common_word" />

    </android.support.constraint.ConstraintLayout>
</layout>